<div class ="container mt-3">
<h3  class="text-center" ><%= @blog.title%></h3>
<div class="img-show-main"><% if @blog.image.present? %>

  <%= image_tag @blog.image ,class:"img-class"%><% end %>

</div>

<p><%= @blog.content %></p>

<%= link_to "Edit", edit_blog_path(@blog.id) , class: 'btn btn-primary' %>
<%= link_to "Delete",blog_path(@blog.id), method: :delete , class: 'btn btn-danger' %>
<%= link_to  "Back", blogs_path , class: 'btn btn-secondary'%>
</div>





