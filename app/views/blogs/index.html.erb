<div class ='container'>
  <div class="main">
  <div class="show-blogs">
      <% @blogs.each do |blog| %>
        <div class = "card-body">
          <div class="img-div">
            <% if blog.image.present? %>
              <%= image_tag blog.image, class:"blog-img" %>
            <% end %>
          </div>
          <div class="blog-text">
            <h3><%= link_to blog.title ,blog_path(blog.id) %></h3>
            <p><%= blog.content%></p>
            <%= link_to "Show More", blog_path(blog.id) , class: "btn btn-primary" %>
          </div>
        </div>
      <br>
      <% end %>
      </div>
    <div class = "card-category">
      <div class = "card-header">
        Categories
      </div>
      <div class= "card-body ">
        <ul class="list-group">
          <% @categories.each do |category|%>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= link_to category.category , blogs_path(:cate => category.id)%>
              <span class="badge bg-primary rounded-pill"><%= category.blogs.count%></span>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    
  </div>
</div>


